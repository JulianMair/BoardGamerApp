<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    android:layout_marginBottom="12dp"
    android:backgroundTint="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Datum & Uhrzeit -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvEventDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“… 06.12.2025"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvEventTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 19:00"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingStart="8dp"/>
        </LinearLayout>

        <!-- Ort -->
        <TextView
            android:id="@+id/tvEventLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“ Bei Anna zuhause"
            android:textSize="16sp"
            android:paddingTop="4dp"/>

        <!-- Gastgeber -->
        <TextView
            android:id="@+id/tvEventHost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ‘¤ Gastgeber: Anna"
            android:textSize="16sp"
            android:paddingTop="4dp"/>

        <!-- Essensauswahl -->
        <TextView
            android:id="@+id/tvEventFood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ• Essen: Italienisch"
            android:textSize="14sp"
            android:textColor="#555555"
            android:paddingTop="4dp"/>

        <!-- Buttons mit Icons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="12dp"
            android:weightSum="5">

            <!-- Ã„ndern -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="4dp">

                <ImageButton
                    android:id="@+id/btnEditEvent"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_edit"
                    android:contentDescription="Ã„ndern" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ã„ndern"
                    android:textSize="12sp"
                    android:paddingTop="4dp"/>
            </LinearLayout>

            <!-- Spiel vorschlagen -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="4dp">

                <ImageButton
                    android:id="@+id/btnSuggestGame"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_add"
                    android:contentDescription="Spiel vorschlagen" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Spiel"
                    android:textSize="12sp"
                    android:paddingTop="4dp"/>
            </LinearLayout>

            <!-- Abstimmen -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="4dp">

                <ImageButton
                    android:id="@+id/btnVote"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_vote"
                    android:contentDescription="Abstimmen" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Abstimmen"
                    android:textSize="12sp"
                    android:paddingTop="4dp"/>
            </LinearLayout>

            <!-- Bewerten -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="4dp">

                <ImageButton
                    android:id="@+id/btnRate"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_star"
                    android:contentDescription="Bewerten" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bewerten"
                    android:textSize="12sp"
                    android:paddingTop="4dp"/>
            </LinearLayout>

            <!-- Nachricht -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="4dp">

                <ImageButton
                    android:id="@+id/btnMessage"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_message"
                    android:contentDescription="Nachricht senden" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nachricht"
                    android:textSize="12sp"
                    android:paddingTop="4dp"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
