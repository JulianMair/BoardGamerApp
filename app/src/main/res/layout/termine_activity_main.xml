<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnAppointment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Termine öffnen" />

        <Button
            android:id="@+id/btnUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User öffnen" />

        <Button
            android:id="@+id/btnAdministration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Verwaltung öffnen" />

        <Button
            android:id="@+id/btnVoting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Auswahl öffnen" />

        <Button
            android:id="@+id/btnEvaluate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bewertung öffnen" />

        <Button
            android:id="@+id/btnFoodAdministration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Essensauswahl öffnen" />

        <Button
            android:id="@+id/btnShowGames"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Spieleliste verwalten" />

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logout" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
