<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- MAIN CONTENT -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- TOOLBAR -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:title="Boardgame App"
            app:titleTextColor="@android:color/white"/>

        <!-- CONTENT -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:orientation="vertical">

            <Button android:id="@+id/btnAppointment" android:text="Termine öffnen"
                android:layout_width="match_parent" android:layout_height="wrap_content"/>

            <Button android:id="@+id/btnUser" android:text="User öffnen"
                android:layout_width="match_parent" android:layout_height="wrap_content"/>

            <Button android:id="@+id/btnAdministration" android:text="Verwaltung öffnen"
                android:layout_width="match_parent" android:layout_height="wrap_content"/>

            <Button android:id="@+id/btnVoting" android:text="Auswahl öffnen"
                android:layout_width="match_parent" android:layout_height="wrap_content"/>

            <Button android:id="@+id/btnEvaluate" android:text="Bewertung öffnen"
                android:layout_width="match_parent" android:layout_height="wrap_content"/>

            <Button android:id="@+id/btnFoodAdministration" android:text="Essensauswahl öffnen"
                android:layout_width="match_parent" android:layout_height="wrap_content"/>

            <Button android:id="@+id/btnShowGames" android:text="Spieleliste verwalten"
                android:layout_width="match_parent" android:layout_height="wrap_content"/>

            <Button android:id="@+id/btnLogout" android:text="Logout"
                android:layout_width="match_parent" android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <!-- DRAWER (RECHTS) -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/burger_menu"/>

</androidx.drawerlayout.widget.DrawerLayout>
